<style>
    :root {
        --primary-color: #244855;
        --secondary-color: #e64833;
        --accent-color: #874F41;
        --text-color: #90AEAD;
        --light-bg: #fbe9d0;
    }

    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background: var(--light-bg);
    }

    .profile-section {
        max-width: 1100px;
        margin: 50px auto;
        padding: 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        margin-top: 6rem;
    }

    .profile-header {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 20px;
        align-items: center;
    }

    .profile-header img {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--primary-color);
    }

    .profile-header .info {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .profile-header .info h2 {
        font-size: 28px;
        color: var(--primary-color);
        margin: 0;
    }

    .profile-header .info p {
        margin: 0;
        color: var(--accent-color);
        font-size: 16px;
    }

    .stamp-preferences {
        margin-top: 30px;
    }

    .stamp-preferences h3 {
        color: var(--primary-color);
        font-size: 24px;
        margin-bottom: 15px;
    }

    .preferences-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
    }

    .preferences-grid label {
        display: flex;
        align-items: center;
        gap: 10px;
        background: var(--light-bg);
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s, background 0.3s;
    }

    .preferences-grid label:hover {
        transform: scale(1.03);
        background: var(--secondary-color);
        color: white;
    }

    .preferences-grid input[type="checkbox"] {
        transform: scale(1.2);
    }

    .update-preferences {
        display: block;
        margin: 30px auto;
        padding: 15px 30px;
        background: var(--secondary-color);
        color: white;
        font-size: 18px;
        font-weight: 600;
        text-align: center;
        border-radius: 8px;
        cursor: pointer;
        border: none;
        transition: background 0.3s;
    }

    .update-preferences:hover {
        background: var(--accent-color);
    }

    @media (max-width: 768px) {
        .profile-header {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .profile-header img {
            margin: 0 auto;
        }

        .preferences-grid {
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        }
    }
</style>