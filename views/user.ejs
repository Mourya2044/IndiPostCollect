<%- include('partials/header'); -%>

<div class="profile-container">
    <div class="sidebar">
        <img src="profile-picture.jpg" alt="User Profile Picture" class="profile-pic">
        <h2 class="user-name">John Doe</h2>
        <p class="user-email">johndoe@example.com</p>
        <ul class="sidebar-menu">
            <li><a href="#overview">Overview</a></li>
            <li><a href="#registered-events">Registered Events</a></li>
            <li><a href="#auctions">Auctions</a></li>
        </ul>
    </div>
    <div class="content">
        <div id="overview" class="tab-content">
            <h3>Overview</h3>
            <p>Welcome to your profile! Manage your account and explore features here.</p>
        </div>
        <div id="registered-events" class="tab-content">
            <h3>Registered Events</h3>
            <p>Here is a list of events you have registered for:</p>
            <ul>
                <li>Philately Webinar - Dec 20, 2024</li>
                <li>Stamp Exhibition - Jan 15, 2025</li>
            </ul>
        </div>
        <div id="auctions" class="tab-content">
            <h3>Auctions</h3>
            <div class="auction-tabs">
                <button class="sub-tab-btn" onclick="showSubTab('placed-auction')">Stamps Placed for Auction</button>
                <button class="sub-tab-btn" onclick="showSubTab('placed-bid')">Stamps Placed for Bidding</button>
            </div>
            <div id="placed-auction" class="auction-tab-content">
                <h4>Stamps Placed for Auction</h4>
                <ul>
                    <li>Rare Indian Stamp (1947) - Starting Bid: ₹10,000</li>
                    <li>Commemorative Stamp (1965) - Starting Bid: ₹5,000</li>
                </ul>
            </div>
            <div id="placed-bid" class="auction-tab-content" style="display: none;">
                <h4>Stamps Placed for Bidding</h4>
                <ul>
                    <li>Japanese Stamp (1950) - Current Bid: ₹15,000</li>
                    <li>French Stamp (1980) - Current Bid: ₹7,000</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>
<script>
    function showSubTab(tabId) {
        document.querySelectorAll('.auction-tab-content').forEach(tab => {
            tab.style.display = 'none';
        });
        document.getElementById(tabId).style.display = 'block';
    }
</script>